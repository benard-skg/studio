
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Events: Publicly readable, no public write
    match /events/{eventId} {
      allow read: if true;
      allow write: if false; // No public write by default
    }

    // Settings: Publicly readable, no public write
    match /settings/{settingId} {
      allow read: if true;
      allow write: if false; // No public write by default
    }

    // Contact Submissions: Publicly readable and writable for now
    match /contactSubmissions/{submissionId} {
      allow read, write: if true;
    }

    // Lesson Reports: Publicly readable and writable for now
    match /lessonReports/{reportId} {
      allow read, write: if true;
    }

    // Default deny for any other collections/paths not explicitly matched
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
