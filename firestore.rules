
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to all documents
    // if the user is authenticated.
    //
    // IMPORTANT: This is a broad rule for initial testing.
    // You MUST refine these rules for production to implement
    // more granular access control (e.g., user can only edit their own
    // data, admins have specific permissions, etc.).
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
